each banner, key in banners
  .banner(id=`top-banner-${key + 1}` style=`background-image: linear-gradient(rgba(0,0,0, 0.55) 0%, rgba(0,0,0, 0.55) 100%), url(${banner.images[0]});
  background-size: cover;
  background-attachment: fixed;`)
    .banner-inner-wrapper.header-text
      .main-caption
        h2 Toma un vistazo a este maravilloso pueblo mágico:
        h1 #{banner.magicTown}
        .border-button
          a(href='/reservation') Hacer plan
      .container
        .row
          .col-lg-12
            .more-info
              .row
                .col-lg-3.col-sm-6.col-6
                  i.fa.fa-user
                  h4
                    span Población:
                    br
                    | #{banner.population}
                .col-lg-3.col-sm-6.col-6
                  i.fa.fa-globe
                  h4
                    span Latitud:
                    br
                    | #{banner.latitude.toFixed(5)}
                .col-lg-3.col-sm-6.col-6
                  i.fa.fa-globe
                  h4
                    span Longitud:
                    br
                    | #{banner.longitude.toFixed(5)}
                .col-lg-3.col-sm-6.col-6
                  .main-button
                    a(href=`/magicTowns/${banner.id}` style="display: inline-block !important;") Explorar más